@model Concesionaria.Models.Nota

@{
    ViewData["Title"] = "Detalhes da Nota";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Numero)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Numero)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataEmissao)</dt>
        <dd class="col-sm-9">@Model.DataEmissao.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Garantia)</dt>
        <dd class="col-sm-9">@Model.Garantia.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ValorVenda)</dt>
        <dd class="col-sm-9">@Model.ValorVenda.ToString("C")</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente.Nome (@Model.Cliente.Cpf)</dd>

        <dt class="col-sm-3">Vendedor</dt>
        <dd class="col-sm-9">@Model.Vendedor.Nome (@Model.Vendedor.Matricula)</dd>

        <dt class="col-sm-3">Carro</dt>
        <dd class="col-sm-9">@Model.Carro.Marca @Model.Carro.Modelo - Chassi: @Model.Carro.Chassi</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
