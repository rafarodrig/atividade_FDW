@model Concesionaria.Models.Vendedor

@{
    ViewData["Title"] = "Cadastrar Vendedor";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DataAdmissao" class="form-label"></label>
                <input asp-for="DataAdmissao" class="form-control" type="date" />
                <span asp-validation-for="DataAdmissao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Matricula" class="form-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Salario" class="form-label"></label>
                <input asp-for="Salario" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
