@model Concesionaria.Models.Carro

@{
    ViewData["Title"] = "Editar Carro";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Marca" class="form-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Modelo" class="form-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnoFabricacao" class="form-label"></label>
                <input asp-for="AnoFabricacao" class="form-control" type="number" min="1900" max="2100" />
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AnoModelo" class="form-label"></label>
                <input asp-for="AnoModelo" class="form-control" type="number" min="1900" max="2100" />
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Chassi" class="form-label"></label>
                <input asp-for="Chassi" class="form-control" maxlength="17" />
                <span asp-validation-for="Chassi" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Preco" class="form-label"></label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
