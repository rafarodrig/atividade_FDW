@model Concesionaria.Models.Carro

@{
    ViewData["Title"] = "Excluir Carro";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<h4>Tem certeza que deseja excluir este carro?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Marca)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Modelo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Modelo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AnoFabricacao)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnoFabricacao)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AnoModelo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AnoModelo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Chassi)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Chassi)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Preco)</dt>
        <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>
